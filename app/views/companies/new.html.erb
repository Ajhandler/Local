  <div class="container">
    <div class="hero formhero">
      <div class="hero-inner">
        <div class="hero-copy">
          <h2>Enter Information to Create Your Business Page</h2>
        </div>
      </div>
    </div>
    <div class="form">
      <%= form_for @company, :html => { :multipart => true } do |f| %>
        
        <% if @company.errors.any? %>
          <ul>
            <% @company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <div class="field">
          <%= f.label :company %>
          <%= f.text_field :company, autofocus: true %>
        </div>

         <div class="field">
          <%= f.label :subdomain %>
          <%= f.text_field :subdomain %>
        </div>

        <div class="field">
          <%= f.label :tagline %>
          <%= f.text_field :tagline%>
        </div>

         <div class="field">
          <%= f.label :address1 %>
          <%= f.text_field :address1%>
        </div>

         <div class="field">
          <%= f.label :address2 %>
          <%= f.text_field :address2%>
        </div>

         <div class="field">
          <%= f.label :city %>
          <%= f.text_field :city%>
        </div>

         <div class="field">
          <%= f.label :state %>
          <%= f.text_field :state%>
        </div>

         <div class="field">
          <%= f.label :zipcode %>
          <%= f.text_field :zipcode%>
        </div>

         <div class="field">
          <%= f.label :phone %>
          <%= f.telephone_field :phone%>
        </div>
   
        <div class="field">
          <%= f.label :fax %>
          <%= f.telephone_field :fax%>
        </div>

   </div>

    <div class="form">

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email%>
        </div>

        <div class="field">
          <%= f.label :about %>
          <%= f.text_area :about%>
        </div>
        
        <div class="field">
          <%= f.label :hours %>
          <%= f.text_field :hours%>
        </div>

        <div class="field">
          <%= f.label :year_established %>
          <%= f.text_field :year_established%>
        </div>

        <div class="field">
          <%= f.label :facebook %>
          <%= f.url_field :facebook%>
        </div>

        <div class="field">
          <%= f.label :twitter %>
          <%= f.url_field :twitter%>
        </div>

        <div class="field">
          <%= f.label :tumblr %>
          <%= f.url_field :tumblr%>
        </div>

        <div class="field">
          <%= f.label :linkedin %>
          <%= f.url_field :linkedin%>
        </div>

        <div class="field">
          <%= f.label :logo %>
          <%= f.file_field :logo %>
        </div>

        <div class="actions" align="center">
          <%= f.submit "Create Site" %>
        </div>
        <% end %>
    </div>
  </div>



























