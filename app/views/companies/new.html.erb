<h2>Enter Information to Create Your Business Page</h2>



<%= form_for @company do |f| %>
  
  <% if @company.errors.any? %>
    <ul>
      <% @company.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :subdomain %><br />
    <%= f.text_field :subdomain %>
  </div>

  <div class="field">
    <%= f.label :tagline %><br />
    <%= f.text_field :tagline%>
  </div>

   <div class="field">
    <%= f.label :address1 %><br />
    <%= f.text_field :address1%>
  </div>

   <div class="field">
    <%= f.label :address2 %><br />
    <%= f.text_field :address2%>
  </div>

   <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city%>
  </div>

   <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state%>
  </div>

   <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode%>
  </div>

   <div class="field">
    <%= f.label :phone %><br />
    <%= f.telephone_field :phone%>
  </div>

  <div class="field">
    <%= f.label :fax %><br />
    <%= f.telephone_field :fax%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div>

  <div class="field">
    <%= f.label :about %><br />
    <%= f.text_area :about%>
  </div>
  
  <div class="field">
    <%= f.label :hours %><br />
    <%= f.text_field :hours%>
  </div>

  <div class="field">
    <%= f.label :year_established %><br />
    <%= f.text_field :year_established%>
  </div>

  <div class="field">
    <%= f.label :facebook %><br />
    <%= f.url_field :facebook%>
  </div>

  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.url_field :twitter%>
  </div>

  <div class="field">
    <%= f.label :tumblr %><br />
    <%= f.url_field :tumblr%>
  </div>

  <div class="field">
    <%= f.label :linkedin %><br />
    <%= f.url_field :linkedin%>
  </div>

  <div class="actions">
    <%= f.submit "Create Site" %>
  </div>
<% end %>



























