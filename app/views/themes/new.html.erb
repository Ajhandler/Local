
<div class="section-header">
	<h1>Select a theme for your website</h1>
</div>
<div class="cards">
	<div class="card">
		<div class="card-image">
			<img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png" alt="">
		</div>
		<div class="card-header">
			Resturant
		</div>
		<div class="card-copy">
			<p>A theme based around good food.</p>
		</div>
		<div class="card-stats">
			<%= form_for @theme do |f|  %>
			<input type="hidden" id="theme_theme_name" name="theme[theme_name]" value="Resturant">
			<%= f.submit  %>
			<% end %>
		</div>
	</div>
